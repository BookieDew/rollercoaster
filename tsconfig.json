{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@config/*": ["src/config/*"],
      "@db/*": ["src/db/*"],
      "@computations/*": ["src/computations/*"],
      "@services/*": ["src/services/*"],
      "@controllers/*": ["src/controllers/*"],
      "@routes/*": ["src/routes/*"],
      "@middleware/*": ["src/middleware/*"],
      "@types/*": ["src/types/*"],
      "@validation/*": ["src/validation/*"]
    }
  },
  "include": [
    "src/**/*",
    "migrations/**/*",
    "seeds/**/*",
    "tests/**/*",
    "knexfile.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
